@model IEnumerable<DomainModel.Artist>

<h2>Artistas descargados</h2>
<div class="single">
    @if (Model.Count() == 0)
    {
        <div class="jumbotron">
            @if (ViewData["search"] != null && (bool)ViewData["search"] == false)
            {
                <p>Todavía no descargas la información de ningún artista</p>
                <p>Empieza por buscar uno</p>
            }
            else
            {
                <p>No has descargado nada que coincida con tu búsqueda</p>
            }
        </div>
    }
    else
    {
        <table class="table table-condensed">
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:60px"><img alt="@item.Name" src="@item.ImageUrlWithDefault" height="40" width="40" /></td>
                    <td>
                        <span class="h3">@Html.DisplayFor(modelItem => item.Name)</span>
                    </td>
                    <td style="width:60px">
                        <span class="btn btn-info">
                            @Html.ActionLink("Ver", "Details", new { id = item.Id })
                        </span>
                    </td>
                    <td style="width:100px">
                        <span class="btn btn-success upload-spotify" data-id="@item.SpotifyId" data-name="@item.Name">
                            Actualizar
                        </span>
                    </td>
                </tr>
            }
        </table>
    }
</div>