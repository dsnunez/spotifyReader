@model SpotifyMetadata.Page<DomainModel.Artist>
<div class="right">
    <div class="btn-group" role="group">

        @{
            string pagedAction = "";
            if ("downloaded".Equals(ViewData["searchType"]))
            {
                pagedAction = "Downloaded";
            }
            else if ("spotify".Equals(ViewData["searchType"]))
            {
                pagedAction = "Spotify";

            }

            string dataSearchQuery = "";
            if (ViewData["searchQuery"] != null && !String.IsNullOrWhiteSpace(ViewData["searchQuery"].ToString()))
            { dataSearchQuery = String.Format("{0}", ViewData["searchQuery"]); }

            string parentDiv = ViewData["parentDiv"].ToString();
        }

        @if (Model.Offset > 0)
        {
            <span id="previous-page-downloaded"
                  data-page="@(Model.CurrentPage -1 )"
                  data-limit="@Model.Limit"
                  data-control="Artists"
                  data-action="@pagedAction"
                  data-search-query="@dataSearchQuery"
                  data-div="@parentDiv"
                  class="btn btn-default page-control">
                @Html.GlyphIcon("backward") Anterior
            </span>
        }
        @if (Model.NextPage)
        {
            <span id="next-page-downloaded"
                  data-page="@(Model.CurrentPage + 1 )"
                  data-limit="@Model.Limit"
                  data-control="Artists"
                  data-action="@pagedAction"
                  data-search-query="@dataSearchQuery"
                  data-div="@parentDiv"
                  class="btn btn-default page-control">
                Siguiente @Html.GlyphIcon("forward")
            </span>
        }
    </div>
</div>
<div class="clearfix"></div>
