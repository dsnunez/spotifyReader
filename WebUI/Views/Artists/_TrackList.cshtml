@model IEnumerable<DomainModel.Track>
<table class="table table-condensed">
    <thead>
        <tr>
            <th style="width:30px">
                @Html.GlyphIcon("music")
            </th>
            <th>
                Canción
            </th>
            <th class="text-center" style="width:150px">
               @Html.GlyphIcon("fire")
            </th>
            <th class="text-center" style="width:80px">
                @Html.GlyphIcon("time")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @String.Format("{0:00}", item.TrackNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="@item.Popularity" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: @item.Popularity%;">
                            @item.Popularity
                        </div>
                    </div>
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DurationStringMMSS)
                </td>
            </tr>
        }
    </tbody>
</table>
