@model DomainModel.Artist
@section styles
    {
    <link rel="stylesheet" type="text/css" href="~/Content/circle.css" />
}
@section scripts
{
    @Scripts.Render("~/Scripts/_albumDetail.js")
}
@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<p>
    @Html.ActionLink("Actualizar", "Update", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<div class="section group">
    <div class="cont">
        @foreach (var album in Model.Albums)
        {
            Html.RenderPartial("_AlbumDetail", album);
        }
    </div>
</div>


